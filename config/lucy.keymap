// I need a copy for every layer because I cannot activate lower number layers (can I?)

#define DEFAULT_US              9

#define SYMBOLS_US              10

#define UTILITY_US              11

#define NUM_FUNC_US             12

#define EXTRA_US                13

#define NONE_ROW &none &none &none &none &none

