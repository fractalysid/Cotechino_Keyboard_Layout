           bindings = <&kp LESS_THAN>, <&kp GREATER_THAN>;
        };

        td_currencies: tap_dance_currencies {
           compatible = "zmk,behavior-tap-dance";
           #binding-cells = <0>;
           tapping-term-ms = <200>;
           bindings = <&kp IT_USD>, <&kp IT_EUR>, <&kp IT_PND>, <&kp IT_YEN>;
        };

        td_currencies_us: tap_dance_currencies_us {
           compatible = "zmk,behavior-tap-dance";
           #binding-cells = <0>;
