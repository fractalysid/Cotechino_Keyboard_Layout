        td_brc: tap_dance_braces {
           compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <180>;
            //bindings = <&kp IT_LBRC>, <&macro_brc>, <&kp IT_RBRC>;
            bindings = <&kp IT_LBRC>, <&kp IT_RBRC>;
        };

        td_brc_us: tap_dance_braces_us {
