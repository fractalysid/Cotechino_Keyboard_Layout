#define DEFAULT                 0

#define UTILITY                 1

#define SYMBOLS                 2

#define NUM_FUNC                3

#define KEYBOARD                4

#define MEDIA_NUMPAD            5

#define EXTRA                   6

#define QWERTY                  7

#define GAMING                  8
